<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ShoppingList.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ShoppingList.Views"
    Title="Lista zakupów">

    <TabBar>
        <ShellContent
            Title="Główna"
            ContentTemplate="{DataTemplate views:ShoppingListPage}"
            Route="ShoppingListPage" />

        <ShellContent
            Title="Lista do sklepu"
            ContentTemplate="{DataTemplate views:ShopListPage}"
            Route="ShopListPage" />

        <ShellContent
            Title="Przepisy"
            ContentTemplate="{DataTemplate views:RecipesPage}"
            Route="RecipesPage" />
    </TabBar>

</Shell>
